 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<?php
// Retrieve the URL of the first image in the gallery
$product_image_gallery = array();
foreach($this->getGalleryImages() as $_image) {
	$product_image_gallery[] = array(
		'url' => $_image->url,
		'label' => $_image->getLabel()
	);
}
?>

<?php // Display the main product image, with zoom capabilities ?>
<div class="product-image-main">
	<a href="<?php echo $product_image_gallery[0]['url']; ?>" class="cloud-zoom" id="product-zoom" rel="adjustX: 20, adjustY: 0, lensOpacity: 0, tint: '#FFFFFF', smoothMove: 5, tintOpacity: 0.35, zoomHeight: 533, zoomWidth: 565">
		<img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->constrainOnly(true)->keepAspectRatio(true)->keepFrame(false)->resize(355,null); ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel()); ?>" border="0" />
	</a>
</div>

<?php // Display the alternative view images (thumbnails) for this product
if(count($product_image_gallery) > 0) {
	echo '<ul class="product-image-alts">';
	foreach($this->getGalleryImages() as $_image) {
		echo '<li><a href="'.$this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()).'" class="cloud-zoom-gallery" rel="'."useZoom: 'product-zoom', smallImage: '".$this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->constrainOnly(true)->keepAspectRatio(true)->keepFrame(false)->resize(355,null)."'".' "><img src="'.$this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->constrainOnly(true)->keepAspectRatio(true)->keepFrame(false)->resize(56,null).'" alt=""/></a></li>';
	}
	echo '</ul>';
}
?>